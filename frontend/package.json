{
  "name": "auto-trading-app",
  "version": "1.0.0",
  "description": "Mobile-first, broker-agnostic, formula-driven stock trading marketplace app",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=__tests__/screens",
    "test:e2e": "detox test",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:ci": "detox test --configuration ios.sim.debug --cleanup",
    "test:e2e:build": "detox build --configuration ios.sim.debug",
    "test:e2e:build:android": "detox build --configuration android.emu.debug",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:debug": "jest --runInBand --detectOpenHandles",
    "test:update": "jest --updateSnapshot",
    "test:clear": "jest --clearCache",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle",
    "build:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "clean": "react-native clean",
    "clean:ios": "cd ios && xcodebuild clean",
    "clean:android": "cd android && ./gradlew clean",
    "start": "react-native start",
    "start:reset": "react-native start --reset-cache",
    "ios": "react-native run-ios",
    "ios:simulator": "react-native run-ios --simulator=\"iPhone 14\"",
    "android": "react-native run-android",
    "android:device": "react-native run-android --device",
    "android:emulator": "react-native run-android --emulator",
    "postinstall": "echo 'Skipping iOS pod install on Windows'",
    "pod:install": "cd ios && pod install",
    "pod:update": "cd ios && pod update",
    "detox:build": "detox build",
    "detox:test": "detox test",
    "detox:clean": "detox clean-framework-cache && detox clean-build-cache",
    "eAS:login": "eas login",
    "eAS:configure": "eas build:configure",
    "build:aab": "eas build -p android --profile production"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "@react-native-community/netinfo": "^11.1.0",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "expo": "^49.0.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "^2.13.4",
    "react-native-reanimated": "^3.5.4",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-screens": "^3.27.0",
    "react-native-svg": "^13.14.0",
    "react-native-vector-icons": "^10.0.2",
    "styled-components": "^6.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.2",
    "@types/react": "^18.2.37",
    "@types/react-native": "^0.72.6",
    "@types/styled-components": "^5.1.29",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "detox": "^20.11.0",
    "eas-cli": "^3.15.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "metro-react-native-babel-preset": "^0.76.8",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
